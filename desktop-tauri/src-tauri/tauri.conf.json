{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WebXrayDB",
  "version": "0.1.0",
  "identifier": "io.github.ryuichi.webxraydb",
  "build": {
    "beforeDevCommand": "cd ../app && bun install --frozen-lockfile && bun run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd .. && wasm-pack build crates/webxraydb-wasm --target web --out-dir ../../app/src/wasm-pkg && cd app && bun install --frozen-lockfile && bun run build",
    "frontendDist": "../app/dist/client"
  },
  "app": {
    "windows": [
      {
        "title": "WebXrayDB",
        "width": 1400,
        "height": 920,
        "minWidth": 1024,
        "minHeight": 700,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
